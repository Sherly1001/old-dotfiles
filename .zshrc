b() {
    if [[ -z $1 ]]; then
        echo "$fg_bold[red]no input files\n"
        return 1
    fi
    cmd=""
    if [[ $1 =~ \.cpp$ ]]; then
        cmd+="g++ "
    else
        cmd+="gcc "
    fi
    cmd+="'$1' "
    
    if [[ -z $2 ]] || [[ $2 = "." ]]; then
        cmd+="-o '$(echo $1 | sed -e "s/\.cp*$//i")'"
    else
        cmd+="-o '$2'"
    fi

    args=($@)
    for (( i = 3; i <= $#; ++i )); do
        cmd+=" '${args[$i]}'"
    done

    echo $cmd
    eval "$cmd"
}

