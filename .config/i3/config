bindsym $mod+Shift+g            exec --no-startup-id $broswer $broswer_private
bindsym $mod+b                  exec --no-startup-id $broswer_2
bindsym $mod+Shift+b            exec --no-startup-id $broswer_2 $broswer_2_private
